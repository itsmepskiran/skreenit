{
  "info": {
    "name": "Skreenit API (Local)",
    "_postman_id": "1d0c3fa2-3a3a-4de7-9c3f-000000000001",
    "description": "Local testing collection for Skreenit backend. Matches FastAPI routers and payloads.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8001" },
    { "key": "auth_token", "value": "" },
    { "key": "candidate_id", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "recruiter_id", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "job_id", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "application_id", "value": "00000000-0000-0000-0000-000000000000" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register (multipart/form-data)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "multipart/form-data" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "fullname", "value": "Test Candidate", "type": "text" },
                { "key": "email", "value": "candidate@example.com", "type": "text" },
                { "key": "mobile", "value": "+910000000000", "type": "text" },
                { "key": "location", "value": "IN", "type": "text" },
                { "key": "role", "value": "candidate", "type": "text" },
                { "key": "company_id", "value": "", "type": "text" },
                { "key": "resume", "type": "file", "src": [] }
              ]
            },
            "url": { "raw": "{{base_url}}/auth/register", "host": ["{{base_url}}"], "path": ["auth","register"] }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"candidate@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
            },
            "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth","login"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.ok && json.data && json.data.access_token) {",
                  "  pm.collectionVariables.set('auth_token', json.data.access_token);",
                  "  if (json.data.user && json.data.user.id) {",
                  "    pm.collectionVariables.set('candidate_id', json.data.user.id);",
                  "    pm.collectionVariables.set('recruiter_id', json.data.user.id);",
                  "  }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Applicant",
      "item": [
        {
          "name": "Save Detailed Form",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"candidate_id\": \"{{candidate_id}}\",\n  \"profile\": {\"id\": \"{{candidate_id}}\", \"email\": \"candidate@example.com\"},\n  \"education\": [],\n  \"experience\": [],\n  \"skills\": []\n}"
            },
            "url": { "raw": "{{base_url}}/applicant/detailed-form", "host": ["{{base_url}}"], "path": ["applicant","detailed-form"] }
          }
        },
        {
          "name": "Get Detailed Form",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/applicant/detailed-form/{{candidate_id}}", "host": ["{{base_url}}"], "path": ["applicant","detailed-form","{{candidate_id}}"] }
          }
        },
        {
          "name": "Upload Resume",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "multipart/form-data" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "applicant_id", "value": "{{candidate_id}}", "type": "text" },
                { "key": "resume", "type": "file", "src": [] }
              ]
            },
            "url": { "raw": "{{base_url}}/applicant/upload-resume", "host": ["{{base_url}}"], "path": ["applicant","upload-resume"] }
          }
        },
        {
          "name": "Get Resume Signed URL",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/applicant/resume-url/{{candidate_id}}", "host": ["{{base_url}}"], "path": ["applicant","resume-url","{{candidate_id}}"] }
          }
        }
      ]
    },
    {
      "name": "Recruiter",
      "item": [
        {
          "name": "Upsert Recruiter Profile",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{recruiter_id}}\",\n  \"company_name\": \"Acme Inc\",\n  \"contact_name\": \"John Doe\",\n  \"contact_email\": \"john@example.com\"\n}"
            },
            "url": { "raw": "{{base_url}}/recruiter/profile", "host": ["{{base_url}}"], "path": ["recruiter","profile"] }
          }
        },
        {
          "name": "Post Job",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Frontend Developer\",\n  \"description\": \"Build UIs\",\n  \"requirements\": \"JS, React\",\n  \"location\": \"Remote\",\n  \"job_type\": \"Full-time\",\n  \"company_id\": \"00000000-0000-0000-0000-000000000000\",\n  \"created_by\": \"{{recruiter_id}}\"\n}"
            },
            "url": { "raw": "{{base_url}}/recruiter/post-job", "host": ["{{base_url}}"], "path": ["recruiter","post-job"] }
          }
        },
        {
          "name": "List Jobs",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/recruiter/jobs", "host": ["{{base_url}}"], "path": ["recruiter","jobs"] }
          }
        }
      ]
    },
    {
      "name": "Video",
      "item": [
        {
          "name": "Add Video Response",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"application_id\": \"{{application_id}}\",\n  \"question_id\": \"00000000-0000-0000-0000-000000000000\",\n  \"video_url\": \"https://example.com/video.mp4\",\n  \"status\": \"completed\"\n}"
            },
            "url": { "raw": "{{base_url}}/video/response", "host": ["{{base_url}}"], "path": ["video","response"] }
          }
        },
        {
          "name": "List Video Responses",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/video/application/{{application_id}}/responses", "host": ["{{base_url}}"], "path": ["video","application","{{application_id}}","responses"] }
          }
        },
        {
          "name": "Upload General Video (multipart)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "multipart/form-data" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "candidate_id", "value": "{{candidate_id}}", "type": "text" },
                { "key": "application_id", "value": "", "type": "text" },
                { "key": "question_id", "value": "", "type": "text" },
                { "key": "video", "type": "file", "src": [] }
              ]
            },
            "url": { "raw": "{{base_url}}/video/general", "host": ["{{base_url}}"], "path": ["video","general"] }
          }
        },
        {
          "name": "Get General Video",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/video/general/{{candidate_id}}", "host": ["{{base_url}}"], "path": ["video","general","{{candidate_id}}"] }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "const token = pm.collectionVariables.get('auth_token') || pm.variables.get('auth_token');",
          "if (token) {",
          "  const hasAuth = pm.request.headers.has('Authorization');",
          "  if (!hasAuth) {",
          "    pm.request.headers.add({ key: 'Authorization', value: `Bearer ${token}` });",
          "  }",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ]
}
