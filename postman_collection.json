{
  "info": {
    "name": "Skreenit API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "API collection for Skreenit recruitment platform"
  },
  "item": [
    {
      "name": "Auth",
      "description": "Authentication and user management endpoints",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/register",
            "description": "Register a new user (candidate or recruiter)",
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key": "full_name", "type": "text", "value": ""},
                {"key": "email", "type": "text", "value": ""},
                {"key": "mobile", "type": "text", "value": ""},
                {"key": "location", "type": "text", "value": ""},
                {"key": "role", "type": "text", "value": "", "description": "candidate or recruiter"},
                {"key": "company_id", "type": "text", "value": "", "description": "Optional for recruiter"},
                {"key": "company_name", "type": "text", "value": "", "description": "Required for recruiter"},
                {"key": "resume", "type": "file", "value": "", "description": "Optional for candidate"}
              ]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/login",
            "description": "Login with email and password",
            "body": {
              "mode": "raw",
              "raw": {
                "email": "",
                "password": ""
              },
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Password Updated",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/password-updated",
            "description": "Notify backend that password was updated (triggers email for recruiter)"
          }
        }
      ]
    },
    {
      "name": "Applicant",
      "description": "Candidate application and profile management",
      "item": [
        {
          "name": "Apply for Job",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/applicant/apply",
            "description": "Submit job application",
            "headers": {
              "Authorization": "Bearer {{token}}"
            },
            "body": {
              "mode": "raw",
              "raw": {
                "job_id": "",
                "cover_letter": "",
                "ai_analysis": {}
              },
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Upload Resume",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/applicant/upload-resume",
            "description": "Upload candidate resume",
            "headers": {
              "Authorization": "Bearer {{token}}"
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key": "applicant_id", "type": "text", "value": ""},
                {"key": "resume", "type": "file", "value": ""}
              ]
            }
          }
