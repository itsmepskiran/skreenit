        {
          "name": "Get Candidate Profile",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/applicant/profile/{{candidate_id}}",
            "description": "Get specific candidate's profile",
            "headers": {
              "Authorization": "Bearer {{token}}"
            }
          }
        },
        {
          "name": "Update Candidate Profile",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/applicant/profile/{{candidate_id}}",
            "description": "Update candidate profile",
            "headers": {
              "Authorization": "Bearer {{token}}"
            },
            "body": {
              "mode": "raw",
              "raw": {
                "education": [],
