            },
            "body": {
              "mode": "raw",
              "raw": {
                "candidate_id": "",
                "profile": {},
                "education": [],
                "experience": [],
                "skills": []
              },
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Get Detailed Form",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/applicant/detailed-form/{{candidate_id}}",
            "description": "Get complete candidate profile form",
            "headers": {
              "Authorization": "Bearer {{token}}"
            }
          }
        },
        {
          "name": "Save Draft",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/applicant/draft",
            "description": "Save form draft",
            "headers": {
              "Authorization": "Bearer {{token}}"
            },
            "body": {
              "mode": "raw",
              "raw": {
                "candidate_id": "",
                "draft": {}
              },
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Get Draft",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/applicant/draft/{{candidate_id}}",
            "description": "Get saved form draft",
            "headers": {
              "Authorization": "Bearer {{token}}"
            }
          }
        }
      ]
    },
