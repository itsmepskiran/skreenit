        {
          "name": "Get Resume URL",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/applicant/resume-url/{{candidate_id}}",
            "description": "Get signed URL for resume download",
            "headers": {
              "Authorization": "Bearer {{token}}"
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/applicant/profile",
            "description": "Get current candidate profile",
            "headers": {
              "Authorization": "Bearer {{token}}"
